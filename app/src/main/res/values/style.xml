<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsActivityTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingLeft">@dimen/margin_size</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/list_settings</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="settingsSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/YP_Blue</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#AEAFB4</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#E6E8EB</item>
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>