<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/settings_icon_padding"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/title_settings" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/settings"
            android:textColor="@color/title_settings"
            android:textSize="@dimen/main_text_size" />

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:theme="@style/settingsSwitch"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/margin_size"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/night_theme"
        android:textColor="@color/list_settings"
        android:textSize="@dimen/settings_text_size" />

    <TextView
        android:id="@+id/share_button"
        style="@style/settingsActivityTextView"
        android:text="@string/share"
        app:drawableEndCompat="@drawable/share"
        app:iconSize="@dimen/icon_size" />

    <TextView
        android:id="@+id/support_button"
        style="@style/settingsActivityTextView"
        android:text="@string/write_support"
        app:drawableEndCompat="@drawable/support"
        app:iconSize="@dimen/icon_size" />


    <TextView
        android:id="@+id/terms_of_use_button"
        style="@style/settingsActivityTextView"
        android:text="@string/terms_of_use"
        app:drawableEndCompat="@drawable/arrow"
        app:iconSize="@dimen/icon_size" />
</LinearLayout>