<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/screen_background">

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="6dp"
        app:cardBackgroundColor="@color/screen_background"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/picture_imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:srcCompat="@drawable/placeholder" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_sing"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/search_title"
            android:textSize="16sp"
            tools:text="No Reply" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_singer"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/icon_settings"
                android:textSize="11sp"
                tools:text="The Beatles" />

            <ImageView
                android:id="@+id/ellipse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ellipse_1" />

            <TextView
                android:id="@+id/time_sing"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/icon_settings"
                android:textSize="11sp"
                tools:text="5:12" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/arrow" />
</LinearLayout>